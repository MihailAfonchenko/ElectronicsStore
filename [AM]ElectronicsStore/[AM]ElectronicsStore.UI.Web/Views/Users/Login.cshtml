@model _AM_ElectronicsStore.UI.Web.Models.LoginModel

@{
    ViewBag.Title = "Вход в систему";
}

<h2>Login</h2>

<div class="hero-unit">
    <fieldset class="form-edit">
        <legend>Вход в систему</legend>
        @using (Html.BeginForm("login", "users", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="control-group">
                <label class="control-label">@Html.LabelFor(model => model.Login)</label>
                <div class="controls">
                    @Html.EditorFor(model => model.Login, new { @class = "input-large" })
                </div>
                <div class="text-error">@Html.ValidationMessageFor(model => model.Login)</div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.LabelFor(model => model.Password)</label>
                <div class="controls">
                    @Html.EditorFor(model => model.Password, new { @class = "input-large" })
                </div>
                <div class="text-error">@Html.ValidationMessageFor(model => model.Password)</div>
            </div>
            <div class="controls">
                <input type="submit" value="Далее" class="btn" />
            </div>
        }
    </fieldset>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
